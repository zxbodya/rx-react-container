{
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "./dist",
    "moduleResolution": "node",
    "module": "es6",
    "strict": true,
    "outDir": "./dist",
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "lib": [
      "dom",
      "es5",
      "es2015.collection",
      "es2015.core",
      "es2015.promise",
      "es2015.iterable",
      "es2016.array.include",
      "es2017"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
